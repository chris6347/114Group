<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="com.itheima.dao.RoleDao">
    <!--按照用户的id来查询角色信息-->
    <resultMap id="roleMap" type="role">
        <!--一个角色可能有很多种权限，而且权限的数据一定要去查询权限表才可以查询出来，
        所以这里需要去调用PermissionDao里面的方法才可以-->
        <collection property="permissions" column="id" select="com.itheima.dao.PermissionDao.findPermissionByRid"/>
    </resultMap>
    <select id="findRoleByUid" parameterType="int" resultMap="roleMap">
        select * from t_user_role ur , t_role r where ur.user_id = #{uid} and ur.role_id = r.id;
    </select>

</mapper>